<div class="container">
    <div class="row">
        <div class="col-md-12 text center">
            <img src="https://img.icons8.com/bubbles/2x/hamburger.png" class="burger-image" alt="Image of Burger" />
            <h1 style="color: saddleBrown; text-align: center">Burger Logger!</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 text-center">


            <h2>Hungry?</h2>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>

        </div>
        <div class="col-md-6 text-center">

            <h2>Consumed:</h2>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>

        </div>

    </div>
</div>

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8 text-center">
        <h2 style="color: saddlebrown;">+ Add Burger +</h2>
        <form class="create-form">

            <div class="form-group">
                <label for="bn">Burger Name:</label>
                <input type="text" id="bn" name="name">
            </div>

            <div class="form-group">
                <label for="devour"> Please select:</label><br>
                <input type="radio" name="devoured" value="0" checked>Still Hungry!<br>
                <input type="radio" name="devoured" value="1">Consumed!<br>
            </div>

            <button type="submit">Eat</button>
        </form>
    </div>
    <div class="col-md-2"></div>
</div>